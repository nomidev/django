from django.shortcuts import render, get_object_or_404, redirect
from django.contrib.auth.decorators import login_required

from .models import Master, Post, Comment
from .forms import PostForm


# Create your views here.
def board_list(request):
    # 최근 게시물 20개와 활성화된 마스터 목록을 템플릿에 전달
    posts = Post.objects.select_related('author', 'master').order_by('-created_at')[:20]
    masters = Master.objects.filter(is_active=True)

    return render(request, 'boards/board_list.html', {'posts': posts, 'masters': masters})


def board_detail(request, pk):
    # 상세 보기 예시: 게시물과 해당 댓글들 조회
    post = get_object_or_404(Post.objects.select_related('author', 'master'), pk=pk)
    comments = post.comments.select_related('author').all()
    return render(request, 'boards/board_detail.html', {'post': post, 'comments': comments})


@login_required
def board_write(request):
    # 게시물 작성 뷰: GET -> 폼 표시, POST -> 저장
    if request.method == 'POST':
        form = PostForm(request.POST)
        if form.is_valid():
            post = form.save(commit=False)
            post.author = request.user
            post.save()
            return redirect('boards:board_detail', pk=post.pk)
    else:
        form = PostForm()

    return render(request, 'boards/board_form.html', {'form': form})
